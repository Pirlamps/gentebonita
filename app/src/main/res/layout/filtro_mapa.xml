<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:gravity="right"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:subtitleTextColor="@android:color/white"
            app:titleTextColor="@android:color/white">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:onClick="vaicreditos"
                android:src="@drawable/dolar" />


            <TextView
                android:id="@+id/textoabafiltro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:text="Opções"
                android:textSize="26dp"
                android:textStyle="bold" />

            <!--<ImageView
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_weight="0.1"
                android:scaleType="fitXY"
                android:src="@drawable/olho" />-->


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:padding="7dp"
                    android:text="Usuários Gente Bonita"
                    android:textColor="@color/colorslide"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <Switch
                    android:id="@+id/filtro1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/SwitchTheme"
                    android:layout_marginRight="7dp"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:padding="7dp"
                    android:textColor="@color/colorslide"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:padding="7dp"
                    android:text="Atrações Múltuas"
                    android:textColor="@color/colorslide"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/filtro2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/SwitchTheme"
                    android:layout_marginRight="7dp"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:padding="7dp"
                    android:textColor="@color/colorslide"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:padding="7dp"
                    android:text="Favoritos"
                    android:textColor="@color/colorslide"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/filtro3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/SwitchTheme"
                    android:layout_marginRight="7dp"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:padding="7dp"
                    android:textColor="@color/colorslide"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:padding="7dp"
                    android:text="Quem eu quero conhecer"
                    android:textColor="@color/colorslide"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/filtro4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/SwitchTheme"
                    android:layout_marginRight="7dp"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:padding="7dp"
                    android:textColor="@color/colorslide"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>