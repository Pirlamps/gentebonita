<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:padding="7dp"
                    android:text="Filtro Gente Bonita"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/notafiltro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:padding="7dp"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <com.appyvet.rangebar.RangeBar
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/notagb"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                custom:rangeBar="false"
                custom:tickStart="0"
                custom:tickInterval="1"
                custom:tickEnd="10"
                custom:tickColor="@color/colorRed"
                custom:tickHeight="0dp"
                custom:connectingLineColor="@color/colorRed"
                custom:pinColor="@color/colorRed"
                custom:pinRadius="17dp"
                custom:pinPadding="5dp"
                custom:barWeight="4dp"
                custom:connectingLineWeight="4dp"
                custom:selectorColor="@color/colorRed"
                custom:selectorSize="10dp"
                android:layout_marginRight="25dp"/>



        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>